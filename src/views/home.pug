extends base
    
block content
    header=pageTitle
    table#position
        tr  
            th 번호
            th ⭐️이름⭐️
            th 밥 🍚
            th 연필 ✏️
            th 박수👏🏻
            th ⭐️합계⭐️ 
        each value in notionData
            tr
                th=value.index
                th=value.name
                td(data-id=value.id data-name="food")
                    span#decrease-btn(data-id=value.id data-name="food" data-type="dec" ) -
                    span#value=value.food ? value.food : 0
                    span#increase-btn(data-id=value.id data-name="food" data-type="inc") + 
                td(data-id=value.id data-name="pencil")
                    span#decrease-btn(data-id=value.id data-name="pencil" data-type="dec") -  
                    span#value=value.pencil ? value.pencil : 0
                    span#increase-btn(data-id=value.id data-name="pencil" data-type="inc")   + 
                td(data-id=value.id data-name="good")
                    span#decrease-btn(data-id=value.id data-name="good" data-type="dec") -  
                    span#value=value.good ? value.good : 0
                    span#increase-btn(data-id=value.id data-name="good" data-type="inc")   + 
                th#total(data-id=value.id )=value.total